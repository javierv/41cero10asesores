!!!
%html{lang: I18n.locale}

  %head
    %title= h(title || "Untitled")
    %meta{charset: "utf-8"}
    = stylesheet_link_tag 'application'
    = include_stylesheets
    = csrf_meta_tag

  %body
    %header#cabecera{role: 'banner'}= render 'general/cabecera'
    #navegacion
      %nav= render 'general/navegacion'
      = render 'general/buscador'

    #content
      = render 'shared/flash', flash: flash
      = render "general/sidebar"

      %section#main{role: 'main'}
        - if show_title?
          %header
            %h1= title
        = yield

    %footer#pie{role: 'contentinfo'}= render 'general/pie'
    = javascript_include_tag :defaults
    = include_javascripts
