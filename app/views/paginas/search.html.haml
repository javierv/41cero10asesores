- title "Resultados para la búsqueda #{params[:q]}" # TODO: ¿@paginas.search_term o similar?
- css 'resultados'
- suggestion = @paginas.spelling_suggestion

- if suggestion
  %p#sugerencia
    ¿Quiso decir
    = link_to(suggestion, search_paginas_path(q: suggestion)) + "?"

%section#resultados
  - @paginas.each do |pagina|
    = render 'resumen', pagina: pagina.indexed_object, term: params[:q]

= paginate @paginas
