- title @pagina, false
- css 'sidebar'

%article[@pagina]

  %header
    %h1= @pagina
  = strict_textilize @pagina.cuerpo

- if !@pagina.cajas_con_orden.empty?
  - content_for(:sidebar) do
    - @pagina.cajas_con_orden.each do |caja|
      = render 'cajas/caja', :caja => caja

= link_to 'Edit', edit_pagina_path(@pagina)
\|
= link_to 'Back', paginas_path