- title "Historial de #{@pagina}"

= form_tag(compare_vestal_versions_version_path, method: :get, class: "diferencias") do

  %section#listado
    = table_for @versiones do |table|
      = table.data do
        = table.cell :id, heading: 'Comparar' do |version|
          - botones_seleccion_diferencias(version)
        = table.cell :created_at, heading: 'Modificado el'
        = table.cell :user, heading: 'Modificado por'
        = actions_cell table, :actions_list

  = buttons { submit_tag 'Comparar seleccionadas' }
= actions_list [:show, :edit, :index], @pagina
