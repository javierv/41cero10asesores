- title "Enviar boletín #{@boletin}"
- css "form"


= simple_form_for @boletin, url: email_boletin_path(@boletin) do |form|
  %fieldset.check_boxes#clientes
    %legend El boletín se enviará a los siguientes clientes
    - @boletin.clientes.each.with_index do |cliente, index|
      .input.boolean
        - id = "boletin_destinatarios_#{index}"
        = check_box_tag "boletin[clientes][]", cliente, true, id: id
        = label_tag id, cliente

  .actions= form.submit "Enviar"
